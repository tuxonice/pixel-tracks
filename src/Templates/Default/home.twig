{% extends "Default/base.twig" %}

{% block title %}Home{% endblock %}

{% block content %}

    <section class="py-5 container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Your tracks</h1>
                <div class="list-group">
                    {% for track in tracks %}
                        <a href="/profile/{{ userKey }}/map/{{ track.key }}" class="list-group-item">{{ track.name }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>
    </section>

    <section class="container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Upload new track</h1>
                <form class="needs-validation" method="POST" enctype="multipart/form-data" action="/profile/{{ userKey }}/upload-track">
                    <div class="mb-3">
                        <label for="trackName" class="form-label">Track Name</label>
                        <input class="form-control" name="trackName" type="text" id="trackName" required="required">
                    </div>
                    <div class="mb-3">
                        <label for="trackFile" class="form-label">Only GPX files</label>
                        <input class="form-control" name="trackFile" type="file" id="trackFile" required="required">
                    </div>
                    <button class="w-100 btn btn-primary btn-lg mt-4" type="submit">Upload</button>
                </form>
            </div>
        </div>
    </section>

{% endblock %}